<%- include('../partials/header.ejs') %>

    <main>
      <section class="auth">
        <h1 class="auth__title">CREA TU CUENTA</h1>
        <p class="auth__text">
          Completa el formulario para ser parte del mundo de los Funkos
        </p>

        <form class="auth__form" action="/auth/register" method="POST" enctype="application/x-www-form-urlencoded">
          <ul class="auth__list">
            <li class="auth__content">
              <label class="auth__label" for="name">Nombre:</label>
              <input
                class="auth__input"
                type="text"
                name="name"
                id="name"
                placeholder="Funko"
                value="<%= body.name %>"
              />
            </li>

            <li class="auth__content">
              <label class="auth__label" for="lastname">Apellido:</label>
              <input
                class="auth__input"
                type="text"
                name="lastname"
                id="lastname"
                placeholder="Shop"
                value="<%= body.lastname %>"
              />
            </li>

            <li class="auth__content">
              <label class="auth__label" for="email">Email:</label>
              <input
                class="auth__input"
                type="email"
                name="email"
                id="email"
                placeholder="ejemplo@funkoshop.com"
                value="<%= body.email %>"
              />
            </li>

            <li class="auth__content">
              <label class="auth__label" for="password">Contraseña:</label>
              <input
                class="auth__input"
                type="password"
                name="password"
                id="password"
                placeholder="********"
              />
            </li>

            <li class="auth__content">
              <label class="auth__label" for="password__repeat">
                Repita Contraseña:
              </label>
              <input
                class="auth__input"
                type="password"
                name="password__repeat"
                id="password__repeat"
                placeholder="********"
              />
            </li>
          </ul>

          <% if (typeof errors != 'undefined') { %>
          <ul>
            <% errors.forEach(error => { %>
              <li class="auth__error"><%= error.msg %></li>
            <% }) %>
          </ul>
          <% } %>

          <div class="auth__enter">
            <input class="auth__button" type="submit" value="Registrar" />
          </div>
        </form>

        <a class="auth__olvidar" href="/auth/login">
          ¿Ya tiene una cuenta? Ingrese
        </a>
      </section>
    </main>

    <%- include ('../partials/footer.ejs') %>

    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="/scripts/menu.js"></script>
  </body>
</html>
